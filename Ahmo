<body>
  <main class="wrap">
    <header>
      <h1>Outils de pourcentage — Calculatrice</h1>
      <p>4 outils + 1 calcul rapide (-4%)</p>

      <!-- Bloc rapide -4% -->
      <div class="quick-calc">
        <input id="quick-val" type="number" step="any" placeholder="Valeur" />
        <button id="quick-btn">-4%</button>
        <span id="quick-result" class="quick-result"></span>
      </div>
    </header>

    <!-- Ici tu gardes tes cartes d'outils existantes -->
    <section class="tools">
      <!-- Exemple : outil X% de Y -->
      <div class="card">
        <label>Pourcentage</label>
        <input type="number" id="percent" placeholder="ex. 20" />
        <label>Valeur</label>
        <input type="number" id="value" placeholder="ex. 100" />
        <button onclick="calcPercent()">Calculer</button>
        <div id="res1" class="result"></div>
      </div>
    </section>
  </main>

  <script>
    // Fonction bloc rapide -4%
    document.getElementById('quick-btn').addEventListener('click', () => {
      const v = parseFloat(document.getElementById('quick-val').value);
      if (isNaN(v)) {
        document.getElementById('quick-result').textContent = "⚠ Valeur invalide";
        return;
      }
      const res = v * 0.96;
      document.getElementById('quick-result').textContent = "= " + res.toFixed(2);
    });

    // Exemple pour l'outil normal
    function calcPercent(){
      const p = parseFloat(document.getElementById('percent').value);
      const v = parseFloat(document.getElementById('value').value);
      if (isNaN(p) || isNaN(v)) {
        document.getElementById('res1').textContent = "⚠ Valeur invalide";
        return;
      }
      const res = (p/100) * v;
      document.getElementById('res1').textContent = res.toFixed(2);
    }
  </script>
